<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4">
      <h2>Create a New Event </h2>
      <%= simple_form_for(@event) do |f| %>
        <div class="form-events">
          <%= f.input :name, placeholder: "Istanbul Meeting" %>
          <%= f.input :description, as: :text, placeholder: "Local meeting with friends in Istanbul" %>
          <%= f.input :user_id, collection: Event::FRIENDS %>
          <%#= f.input :start_time, as: :string, required: true, input_html: {class: "datepicker"} %>
          <%#= f.input :end_time, as: :string, required: true, input_html: {class: "datepicker"} %>
        </div>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
     </div>
  </div>
</div>
